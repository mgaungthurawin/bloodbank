extends ../layout/base 
block content 
	section.content-header 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Edit User
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				a(href='/users').pull-right.btn.btn-primary
					|  Back
				br
				br
				form(role='form',method='post' action='/users/#{(id==undefined) ? data.id : id}/update')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Name
									input(type='text',value="#{data.name}",name='name',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Email
									input(type='text',value="#{ (email == undefined) ? data.email : email }",name='email',placeholder='Enter Address').form-control
								.form-group
									label
										| Password
									input(type='password',name='password',placeholder='*****').form-control
								.form-group
									label
										| User Type
									select(id="user_type", name="user_type").form-control
										option(value="1") Administrator
										option(value="2") Donar
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary.pull-right
									i.fa.fa-pencil 
									|  Edit